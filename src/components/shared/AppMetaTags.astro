<!-- Para iOS -->
<meta name="apple-itunes-app" content="app-id=1642521024">

<!-- Para Android y Desktop -->
<script>
  if (!/iPhone|iPad|iPod/i.test(navigator.userAgent)) {
    document.addEventListener('DOMContentLoaded', (event) => {
      const banner = document.createElement('div');
      banner.innerHTML = `
        <div id="app-banner" class="fixed bottom-0 left-0 right-0 bg-background border-t border-border p-4 shadow-lg transition-all duration-300 ease-in-out transform translate-y-full">
          <div class="container mx-auto flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <img src="/new-logo.png" alt="MuyFadu Logo" class="h-10 w-10">
              <div>
                <p class="text-foreground font-semibold">MuyFadu App</p>
                <p class="text-muted-foreground text-sm">Mejora tu experiencia</p>
              </div>
            </div>
            <a href="https://play.google.com/store/apps/details?id=dev.millionsolutions.faduapp" 
               class="bg-primary hover:bg-primary-dark text-primary-foreground font-bold py-2 px-4 rounded transition-colors duration-200 ease-in-out">
              Descargar
            </a>
          </div>
          <button id="close-banner" class="absolute top-2 right-2 text-muted-foreground hover:text-foreground transition-colors duration-200 ease-in-out">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      `;
      document.body.appendChild(banner);

      setTimeout(() => {
        const appBanner = document.getElementById('app-banner');
        if (appBanner) {
          appBanner.classList.remove('translate-y-full');
        }
      }, 1000);

      const closeBanner = document.getElementById('close-banner');
      if (closeBanner) {
        closeBanner.addEventListener('click', () => {
          const appBanner = document.getElementById('app-banner');
          if (appBanner) {
            appBanner.classList.add('translate-y-full');
            setTimeout(() => {
              appBanner.remove();
            }, 300);
          }
        });
      }
    });
  }
</script>